<!-- Views\Payment\Shipping.cshtml -->
@{
    ViewData["Title"] = "Shipping Options";
}

<h2>Choose Shipping Option</h2>

<form asp-action="Shipping" asp-controller="Home" method="post">
    <!-- Add radio buttons for shipping options here -->
    <input type="hidden" name="Products" value="@ViewBag.Products" />
    <input type="hidden" name="CustomerID" value="@ViewBag.CustomerID" />
    <input type="hidden" name="Total" value="@ViewBag.Total" />

    <!-- Radio buttons for shipping options -->
    <input type="radio" name="ShippingOption" value="Free" /> Free Shipping (4-7 business days)

    <input type="radio" name="ShippingOption" value="Express" /> Express Shipping - adds $9.99 (1-3 business days)

    <button type="submit">Continue to Payment</button>
</form>
