
@{
    ViewData["Title"] = "Shipping Options";
}

<h2 class="text-xl font-semibold mb-4">Choose Shipping Option</h2>

<form asp-action="Shipping" asp-controller="Home" method="post" class="space-y-4">
    <!-- Hidden fields -->
    <input type="hidden" name="Products" value="@ViewBag.Products" />
    <input type="hidden" name="CustomerID" value="@ViewBag.CustomerID" />
    <input type="hidden" name="Total" value="@ViewBag.Total" />

    <!-- Radio buttons for shipping options -->
    <div class="flex items-center">
        <input type="radio" name="ShippingOption" value="Free" id="freeShipping" class="mr-2" />
        <label for="freeShipping" class="text-md">Free Shipping (4-7 business days)</label>
    </div>

    <div class="flex items-center">
        <input type="radio" name="ShippingOption" value="Express" id="expressShipping" class="mr-2" />
        <label for="expressShipping" class="text-md">Express Shipping - adds $9.99 (1-3 business days)</label>
    </div>

    <button type="submit">Continue to Payment</button>
</form>
